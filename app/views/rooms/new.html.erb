<h1>ルーム情報登録</h1>

<div class="registration">
<%= form_with(model:@room, local:true) do |f| %>
  <%# <%= render 'layouts/error_messages', f: f.object %> 
<% @room.errors.full_messages.each do |message|%>
<%= message %>
<% end %>
  <%= f.text_field :name, placeholder:"ルーム名" %>
  <%= f.text_area  :introduction, placeholder:"ルーム説明を入力"%>
  <%= f.text_field :price, placeholder:"一日あたりの料金を入力"%>
  <%= f.text_field :address, placeholder:"住所"%>
  <%= f.file_field :img, placeholder:"画像"%>
  <%= f.submit '登録' %>
<% end %>
</div>
