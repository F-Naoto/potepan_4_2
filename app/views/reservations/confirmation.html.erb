<div class="reservation__confirmation">
  <div class="reservation__confirmation__container">
    <div class="reservation__confirmation__container__inner">
      <div class="reservation">
          <%= form_with(model:@reservation, local: true ) do |f| %>
        <div class="reservation_inner">
          <div class="reservation_title"><p>予約内容確認</p></div>
          <div class="price_per_day"><p>¥<%= @reservation.room.price %> / 日</p></div>
          <div class="reservation_label">開始日</div>
          <div class="reservation_inner__emphasis"><%= @reservation.from_when %></div>
          <div class="reservation_label">終了日</div>
          <div class="reservation_inner__emphasis"><%= @reservation.to_when %></div>
          <div class="not_emphasis">使用日数 : <%=@reservation.total_day %>日</div>
          <div class="not_emphasis">人数 : <%= @reservation.stay_number %>人</div>
          <div class="reservation_label">合計金額</div>
          <div class="reservation_inner__emphasis"><%= @reservation.total_price %></div>
          <div><p class="reservation_comment">上記内容でよろしければ「予約を確定」を押してください</p></div>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.hidden_field :from_when, value: @reservation.from_when %>
            <%= f.hidden_field :to_when, value: @reservation.to_when %>
            <%= f.hidden_field :stay_number, value: @reservation.stay_number %>
            <%= f.submit :予約を確定, class: 'reservation_btn' %>
            <%= link_to 'ルーム詳細に戻る', room_path(@reservation.room_id) ,class: 'back_btn' %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>